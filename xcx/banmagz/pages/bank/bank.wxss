/* pages/bank/bank.wxss */
.bank_card{width: 690rpx;margin: 37rpx auto 0;}
.main{width: 100%;height: 90rpx;border-bottom: 1rpx solid #e5e5e5;display: flex;align-items: center;justify-content: space-around}
.main_left{display: flex;align-items: center}
.title{width: 200rpx;font-size: 30rpx;margin-left: 27rpx;}
.icon{width: 39rpx;text-align: center}
.icon_01{width: 29rpx;height: 30rpx;}
.icon_02{width: 39rpx;height: 30rpx;}
.icon_03{width: 29rpx;height: 43rpx;}
.icon_04{width: 30rpx;height: 30rpx;}
.main_right input{width: 370rpx;font-size: 30rpx;color: #888888;text-align: right;padding-right: 30rpx}
.picker{width: 370rpx;font-size: 30rpx;color: #888888;height: 90rpx;line-height: 90rpx;text-align: right;padding-right: 30rpx}
.btn{width: 100%;height: 140rpx;position: fixed;left: 0;bottom: 0}
.btn button{width: 580rpx;height: 76rpx;background: linear-gradient(to right,#fede01,#fdc100);border-radius: 38rpx;line-height: 76rpx}
.btn_ts{font-size: 30rpx;width: 100%;text-align: center;color: red;line-height: 40rpx;margin-top: 30rpx}