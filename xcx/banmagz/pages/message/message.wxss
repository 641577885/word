.search {width:100%;background:#fede01;padding:16rpx;position:fixed;left:0;top:0;z-index:1}
.search_content {width:718rpx;height:56rpx;border-radius:9rpx;background:#fff;position:relative}
.search_content icon {position:absolute;top:17rpx;left:50%;margin-left:-80rpx}
.search_content text {display:block;width:100%;height:56rpx;font-size:26rpx;color:#b2b2b2;line-height:56rpx;text-align:center}
.message_item {padding-left:30rpx}
.message_main {width:100%;height:185rpx;border-bottom:1rpx solid #eee;position:relative}
.message_avatar {width:120rpx;height:120rpx;border-radius:6rpx;background:#dfdfdf;position:absolute;left:0;top:32rpx;overflow:hidden}
.unread{ position: absolute; top: 0; right: 0; width: 30rpx; height: 30rpx; line-height: 30rpx; border-radius: 50%; overflow: hidden; background: red; text-align: center; font-size: 20rpx; color: #fff;}
.message_avatar image {display:block;width:100%;height:100%}
.meaasge_content {width:560rpx;height:120rpx;position:absolute;top:32rpx;right:17rpx}
.meaasge_info {width:100%;height:48rpx}
.name {font-size:34rpx;color:#000;line-height:48rpx;float:left}
.company {font-size:24rpx;color:#bfbfbf;line-height:48rpx;float:right}
.message_sub { display: flex; align-items: center; width:100%;height:72rpx;font-size:26rpx;color:#a9a9a9;line-height:36rpx}
.nav_messgae {background:#000!important}
