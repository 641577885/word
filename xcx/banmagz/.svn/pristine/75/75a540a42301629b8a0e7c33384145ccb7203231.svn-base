// pages/index/pbDetail.js
var app = getApp();
const bm = require('../../utils/common.js')
Page({

  /**
   * 页面的初始数据
   */
  data: {
    id:Number,
    title:"",
    detail:"",
    nums:0,
    pnums:0,
    work_way:1,
    lowsalary:'',
    highsalary:'',
    profession:0,
  },
  fillTitle:function(e){
    var title = e.detail.value;
    this.setData({ title: title})
  },
  fillDetails:function(e){
    var detail = e.detail.value;
    var nums = e.detail.cursor;
    this.setData({ detail: detail, nums: nums})
  },
  getformId:function(e){
    var formid = e.detail.formId;
    app.addformId(formid)
  },
  submit:function(){
    var that=this;
    if (that.data.title==""){
      wx.showToast({
        title: '请输入标题',
        icon:"none"
      })
      return false;
    }
    if (that.data.detail == "") {
      wx.showToast({
        title: '请输入描述',
        icon: "none"
      })
      return false;
    }
    var query = {
      id: that.data.id, title: that.data.title, content: that.data.detail, work_way: that.data.work_way, lowsalary: that.data.lowsalary, highsalary: that.data.highsalary, profession: that.data.profession,}
    bm.requsetData('/b/position/update', 'post', query, function (res) {
      if (!res.data.errcode) {
        wx.showToast({
          title: '开放成功',
          success: function () {
            setTimeout(function () {
              wx.reLaunch({
                url: '/pages/business/list',
              })
            }, 1500)
          }
        })

      } else {
        wx.showToast({
          title: res.data.errmsg,
          icon: 'none'
        })
      }
    })
  },
  bindGetUserInfo:function(e){
    var that=this;
    var data = e.detail.userInfo||[];
    if (data.length==0){
      return false;
    }
    bm.requsetData("/c/login/set_wxinfo", "post", { userinfo: data},function(res){
      if(!res.data.errcode){
        that.submit();
      }else{
        wx.showToast({
          title: res.data.errmsg,
          icon:"none"
        })
      }
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that=this;
    that.setData({ id: options.id, pnums: options.pnums,title:options.title})
    bm.requsetData('/b/position/getinfo', 'get', { id: options.id }, function (res) {
      if (!res.data.errcode) {
        var _data = res.data.info;
        that.setData({
          work_way: _data.work_way,
          lowsalary: _data.lowsalary,
          highsalary: _data.highsalary,
          profession: _data.profession,
        })
      } else {
        wx.showToast({
          title: res.data.errmsg,
          icon: 'none'
        })
      }
    })
  }
})