// pages/worker/details/job.js
const bm=require('../../utils/common.js')
const app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    uid:Number,
    role:0,
    position:{},
    company:{},
    seller:{},
    is_open:true,

    publisher_name: '风雪',
    company_name: '力石科技2',
    position: '人力资源总监',
    active: '刚刚活跃',
    //经度
    long: null,
    // 纬度
    lat: null,
    place:'555555',
    mapshow:false,
    
    company_add:'',

    rec:[]
  },
  //跳转编辑
  editJob:function(){
    wx.navigateTo({
      url: 'jobEdit?type=2&id=' + this.data.position.id,
    })
  },
  //开关职位
  opJob:function(e){
    var that=this;
    var isopen = e.target.dataset.status;
    var mcontent, mdetail, tip;
    if (isopen==0){
      mcontent ="是否关闭该职位";
      mdetail ="关闭之后该职位将不显示在职位列表";
      tip='关闭成功';
    }else{
      mcontent = "是否开启该职位";
      mdetail = "开启之后该职位将显示职位列表";
      tip = '开启成功';
    }
    wx.showModal({
      title: mcontent,
      content: mdetail,
      showCancel: true,
      cancelText: '取消',
      confirmText: '确定',
      success: function () {
        bm.requsetData('/b/position/open_status', 'post', { id: that.data.position.id, is_open: isopen }, function (res) {
          if (!res.data.errcode) {
            wx.showToast({
              title: tip,
              success: function () {
                that.setData({ is_open: !that.data.is_open})
              }
            })
          } else {
            wx.showToast({
              title: res.data.errmsg,
              icon: 'none'
            })
          }
        })
      }
    })
  },
  link2Dialog:function(){
    wx.navigateTo({
      url: '/message/dialog?skipid='+this.data.seller.id,
    })
  },
  golocation:function(){
    var _that = this
    var add = _that.data.company_add
    if(add.length >0){
      wx.request({
        url: 'http://apis.map.qq.com/ws/geocoder/v1/?address=' + add + '&key=XBNBZ-NDECV-4V4PQ-UFNJY-B6E5Q-FBBGB',
        success: function (data) {
          console.log(data)
          wx.openLocation({
            latitude: data.data.result.location.lat,
            longitude: data.data.result.location.lng,
            name: add,
            scale: 28
          })
        }
      })
    }
    
    
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    that.setData({ role: app.globalData.role})
    bm.requsetData('/c/position/get','get',{id:options.id},function(res){
      console.log(res)
      if(!res.data.errcode){
        if (res.data.position.status < 3) {
          that.setData({is_open: true})
        } else {
          that.setData({ is_open: false })
        }
        if (res.data.position.work_address.length == 0) {
          var add = '暂未填写地址'
        } else {
          var add = res.data.position.work_address
        }
        that.setData({
          position: res.data.position,
          seller: res.data.seller,
          company: res.data.company,
          company_add: add
        })
      }else{
        wx.showToast({
          title: res.data.errmsg,
          icon:'none'
        })
      }
    })
  }
})