<view class='positiontype3Container'>
   <view class='positiontype3Main'>
      <view class='positiontype3MainTop'>
          <view class='positiontype3MainTopC'>
          <view class='positiontype3Title'>3/3选择岗位类型</view>
      </view>
          <view class='positiontype3look'>给岗位选择一个相应的职位类型</view>
      </view>
      <view class='positiontype3Map'>
           <view class="section">
              <input placeholder="请输入职位标题" class='wages' bindinput='inputtitle' auto-focus/>
          
      </view>
        <view class="section noborder" >
             <textarea bindinput='inputcontent' placeholder='这里描述一下工作内容，岗位的要求，如公司福利公司工资公司规模等'></textarea>
         </view>
          <view>
        <view class='camara'  bindtap="gotoShow" >
              <image style="width: 48rpx; height: 42rpx;" mode="" src="../../../images/business/camara.gif"></image>
                 <view class='camaratext'> 拍照智能识别岗位描述</view>
        </view>
          <!-- <view class='camaratext'> 拍照智能识别岗位描述</view> -->
          <navigator url='/pages/details/jobEdit?type=1'>
            <view class='more'>+更多要求</view>
          </navigator>
        <view class='positiontype3MainBottom'>
            <button class='comfirmnext' plain="{{plain}}" bindtap="comfirmnext">下一步 </button>
        </view>
      </view>
      </view>
   </view>
</view>