/* pages/picker/cityPicker.wxss */
.cityCantianer{ position: absolute; top: 0; left: 0; right: 0; bottom: 0; padding: 0 50rpx;}
.cityCantianer scroll-view{ height: 100%; box-sizing: border-box;}
.cityPosition{ padding: 20rpx 0; border-bottom: 1rpx solid #e5e5e5;}
.cityTitle{ font-size: 24rpx; color: #666;}
.cityPositionTxt{ font-size: 32rpx; margin-top: 20rpx;}
.cityItemCantainer{ padding: 20rpx 0;}
.cityItemList{ margin-top: 20rpx;}
.cityItem{ display: inline-block; width: 30%; height: 46rpx; font-size: 26rpx; line-height: 46rpx; color: #666; text-align: center; border: 1rpx solid #e5e5e5; border-radius: 5rpx; vertical-align: top; margin: 0 10rpx 10rpx 0;}

.zmBar{ position: fixed; top: 50rpx; bottom: 50rpx; right: 0; display: flex; align-items: center; flex-direction: column; justify-content: space-between; width: 50rpx;}
.zmBar text{ display: block; width: 50rpx; height: 50rpx; text-align: center; line-height: 50rpx; font-size:24rpx; color: #fede01; }