  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    that.setData({
      selToID: options.skipid,
      selfHeadUrl: app.globalData.selfHeadUrl,
    })
    app.getAvatar(options.skipid.toString(), function (res) {
