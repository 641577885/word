/* pages/pay/setpay.wxss */
page{ padding-bottom: 230rpx;}
.workcontent{width: 690rpx;height: 292rpx;position: relative; padding: 30rpx; border-bottom: 30rpx solid #fafafa}
.workArea{ position: relative; width: 628rpx;height: 230rpx;background: #f4f4f4;border: 1rpx solid #dae2f8;border-radius: 8rpx;padding: 30rpx; }
.workArea textarea{ width: 100%; height: 200rpx; font-size: 30rpx;color: #000000;line-height: 40rpx;}
.placeholder_style{font-size: 30rpx;color: #8e9091;line-height: 40rpx;}
.textarea_num{font-size: 30rpx;color: #8e9091;line-height: 40rpx;position: absolute;bottom: 20rpx;right: 30rpx;}
.share{width: 690rpx;height: 88rpx;border-bottom: 1rpx solid #e5e5e5;margin-left: 30rpx;display: flex;justify-content: space-between;padding-right: 30rpx;align-items: center;}
.share_01{display: flex;}
.share_01_icon{width: 46rpx;height: 46rpx;position: relative;}
.share_no{width: 42rpx;height: 42rpx;border: 2rpx solid #c9c9c9;border-radius: 50%;}
.share_yes{width: 46rpx;height: 46rpx;position:absolute;top: 0;left: 0;}
.share_text{font-size: 34rpx;color: #000000;line-height: 46rpx;margin-left: 20rpx;}
.swiper_tab{width: 532rpx;height: 92rpx;display: flex;border-radius: 5rpx;margin: 58rpx auto 0;justify-content: space-between;align-items: center;padding: 0 8rpx;color: #666}
.swiper_tab_item{height: 76rpx;border-radius: 5rpx;text-align: center;line-height: 76rpx;font-size: 30rpx;}
.on{color: #000;border-bottom:1rpx solid #000;}
.swiper_box{width: 690rpx;height: 520rpx;margin: 0 auto;}
swiper-item{width: 100%;height: 100%;}
.by_price{ display: flex; align-items: center; justify-content: center; width: 100%;height: 100rpx;text-align: center;margin-top: 60rpx;}
.by_price input{ width: 200rpx; height: 50rpx; line-height: 50rpx; font-size: 30rpx; border: 1rpx solid #c9c9c9; margin-left: 10rpx; text-align: left; padding: 0 10rpx; }
.price_01{font-size: 28rpx;color: #8e9091;}
.price_02{font-size: 28rpx;color: #fe5a01;}
.price_03{font-size: 71rpx;color: #fe5a01;}
.by_time{width: 548rpx;display: flex;justify-content: space-between;margin: 56rpx auto 0;}
.by_time picker{width: 202rpx;height: 74rpx;border: 1rpx solid #dae2f8;border-radius: 8rpx;line-height: 74rpx;text-align: center;background: #f4f4f4;font-size: 30rpx;color: #8e9091;position: relative;}
.picker{width: 202rpx;height: 74rpx;}
.picker_02{width: 202rpx;height: 74rpx;position: absolute;top: 0;left: 0}
.by_time text{line-height: 74rpx;font-size: 48rpx;color: #8e9091;}

.btnCantainer{ position: fixed; bottom: 0; left: 0; right: 0; padding: 30rpx; background: #fff; box-shadow: 0 -10rpx 20rpx rgba(0,0,0,0.1)}
.btn{width: 690rpx;height: 96rpx;background: #000;color: #fff;line-height: 96rpx;font-size: 29rpx; margin-top: 30rpx;}
.allPrice{ display: flex; align-items: center; justify-content: space-between;}
.allPriceTip,.allPriceNum{ font-size: 34rpx; color: #000000;}
.allPriceNum text{color: #fe5a01;}

.fillList,.serverList{ position: relative; display: flex;justify-content: space-between; align-items: center; width: 100%; height: 56rpx; padding: 20rpx 0;border-bottom: 1rpx solid #e5e5e5}
.serverList{ border: 0 none}
.priceList{position: relative; display: flex;justify-content: space-between; align-items: center; width: 100%; height: 56rpx;  border: 0 none}
.priceListCantainer{ border-bottom: 1rpx solid #e5e5e5; padding: 20rpx 0;}
.instruct{ display: flex; align-items: center; justify-content: flex-start; font-size: 30rpx; color: #000; }
.section{ font-size: 30rpx; color: #666;  margin-right: 50rpx;}
.section text{ color: #fe5a01}
.fillList::after{ position: absolute; right: 10rpx; top: 50%; margin-top: -12rpx; content: ""; width: 16rpx; height: 25rpx; background:url(https://bm.jiangcdn.com/banma/jt_gray.png) no-repeat; background-size: 100%;}
.priceList::after{ position: absolute; right: 10rpx; top: 50%; margin-top: -18rpx; content: 'å…ƒ'; background: none; font-size: 30rpx; color: #999; width: 25rpx;}
.priceInput{ display: block; text-align: right; height: 100%; margin-right: 50rpx; font-size: 34rpx; color: #fe5a01}
.priceTip{ font-size: 22rpx; color: #666666}
.helpIcon{ width: 34rpx; height: 34rpx; margin-left: 10rpx;}
.helpIcon image{ width: 100%; height: 100%;}
.perTxt{ margin-left: 10rpx;}


.checkbox{ display: flex; align-items: center; justify-content: space-between;}
.checkbox text{ color: #333; font-size: 30rpx;}
.checkbox checkbox{ transform: scale(0.8);}
.setpayBottom{ margin-top: 80rpx;}
.setpayLine{ display: flex; align-items: center; justify-content: space-between; height: 50rpx; }
.setpayLine text{ color: #333; font-size: 30rpx;}
.fwFee{ font-size: 30rpx; margin-top: 20rpx;}
.maright{margin-right: 0}
.servefeeTip{ background: #fafafa; font-size: 22rpx; background: #fafafa; text-align: center; padding: 20rpx 0; color: #000;}

.topBarCantainer{ display: flex; align-items: center; justify-content: flex-start; background: #fff; height: 128rpx; border-bottom: 30rpx solid #fafafa; padding: 0 30rpx;}
.memberImg{ width:58rpx; height: 58rpx; border-radius: 50%; background: #000}
.memberImg image{ width: 58rpx; height: 58rpx;}
.memberName{ font-size: 34rpx; color: #000; margin-left: 20rpx;}
.vipIcon{ width: 130rpx; height: 39rpx; margin-left: 20rpx;}
.vipIcon image{ width: 130rpx; height:39rpx;}