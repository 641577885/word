/* business/my/previewCompany.wxss */
page{background: #f4f4f4}
.top{width: 100%;background: #fff;padding: 30rpx 0;}
.top_main{width: 690rpx;margin: 0 auto;display: flex;justify-content: space-between;align-items: center}
.top_main_left{width: 500rpx}
.company_name{font-size: 48rpx;font-weight: bold;line-height: 60rpx;}
.company_info{font-size: 26rpx;line-height: 40rpx;margin-top:20rpx }
.company_avatar{width: 140rpx;height: 140rpx;box-sizing: border-box;display: flex;align-items: center;border: 1rpx solid #dfdfdf;border-radius: 5rpx;overflow: hidden}
.company_avatar image{width: 100%;height: 100%}

.content{width: 100%;background: #fff;padding: 30rpx 0;margin-bottom: 30rpx;}
.content_main{width: 690rpx;margin: 0 auto;}
.content_title{width: 100%;height: 70rpx;border-bottom: 1rpx solid #eeeeee;}
.content_title text{height: 68rpx;display: inline-block;border-bottom: 4rpx solid #fede01;font-size: 26rpx;line-height: 68rpx;}
.content_content{padding: 30rpx 0;font-size: 26rpx;color: #333333;line-height: 37rpx;}