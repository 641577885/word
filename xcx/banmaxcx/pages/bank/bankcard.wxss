/* pages/bank/bankcard.wxss */
page{background: #42444f}
.main{width: 100%}
.card_list{width: 100%;height: 366rpx;position: relative}
.card_list image{width: 100%;height: 366rpx;}
.card_content{position: absolute;left: 76rpx;top: 74rpx;}
.card_top{display: flex;}
.card_avatar{width: 82rpx;height: 82rpx;border-radius: 50%;background: #fff;overflow: hidden}
.card_avatar image{width: 82rpx;height: 82rpx;}
.bank_name{color: #fff;height: 82rpx;margin-left: 18rpx}
.bank_name_01{font-size: 36rpx;line-height: 41rpx}
.bank_name_02{font-size: 26rpx;line-height: 41rpx}
.card_bottom{width: 470rpx;height: 75rpx;position: absolute;left: 176rpx;top: 167rpx;display: flex;justify-content: space-between;align-items: center;color: #fff}
.card_code{font-size: 26rpx;}
.card_code_wh{font-size: 62rpx;font-weight: bold}
.card_btn button{width:580rpx;height:76rpx;border-radius:38rpx;margin:37rpx auto 0;background:linear-gradient(to right, #fede01 , #fdc100);line-height:76rpx;font-size:30rpx;}