// guide/activity.js
const Page = require('../utils/ald-stat.js').Page;
const bm = require('../utils/common.js')
const app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    bg_img: '',
    but_img: '',
    conts_img: '',
    but_url: ''
  },
  getUrl: function(tk, act_id) {
    var that = this;
    bm.requsetData("/c/guide/transfer", "get", {
      access_token: tk,
      id: act_id
    }, function(data) {
      console.log(data);
      var array = data.data.data;
      if (data.data.errcode == 0) {
        that.setData({
          bg_img: array.bg_img,
          but_img: array.but_img,
          conts_img: array.conts_img,
          but_url: array.but_url
        })
        // 跳转
      } else {
        wx.showToast({
          mask: true,
          title: data.data.errmsg,
          duration: 1000
        })
      }
    })
  },
  bindGetUserInfo: function(e) {
    var that = this;
    var data = e.detail.userInfo || null;
    if (data == null) {
      wx.navigateTo({
        url: '/guide/done',
      })
      return false
    }
    bm.requsetData("/c/login/set_wxinfo", "post", {
      userinfo: data,
      is_up:1
    }, function(res) {
      if (!res.data.errcode) {
        app.globalData.info = data;
        that.understandbm();
      } else {
        wx.showToast({
          title: res.data.errmsg,
          icon: "none"
        })
      }
    })
  },
  bindGetUserInfos: function (e) {
    var that = this;
    console.log(e.detail);
    var data = e.detail.userInfo || null;
    if (data == null) {
      wx.navigateTo({
        url: '/guide/done',
      })
      return false
    }
    bm.requsetData("/c/login/set_wxinfo", "post", {
      userinfo: data, is_up: 1
    }, function (res) {
      if (!res.data.errcode) {
        app.globalData.info = data;
        wx.navigateTo({
          url: that.data.but_url
        })
      } else {
        wx.showToast({
          title: res.data.errmsg,
          icon: "none"
        })
      }
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    var that = this;
    var tk = app.globalData.token;
    var act_id = app.globalData.act_id;
    if (act_id > 0) {
      that.getUrl(tk, act_id);
    } else {
      wx.navigateTo({
        url: '/pages/login/loading',
      })
    }
  },
  //点击跳转到指定页面
  understandbm: function() {
    wx.navigateTo({
      url: '/help/problem',
    })
  }

})