// pages/login/loading.js
const bm = require('../../utils/common.js')
var app=getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
  
  },
  getAuthStep:function(){
    var that = this;
    var session_id = wx.getStorageSync('PHPSESSID');//本地取存储的sessionID  
    bm.sessionRequset('/c/login/next_view', { role: 1, access_token: app.globalData.token}, function (data) {
      console.log(data)
      if (!data.errcode) {
        switch (data.auth) {
          case 1:
            wx.redirectTo({
              url: '/pages/worker/list',
            });
            break;
          case 2: 
            wx.switchTab({
              url: '/pages/worker/list',
            })
            break;
          default:
            wx.redirectTo({
              url: '/member/login',
            });
        }
      } else {
        wx.showToast({
          title: data.errmsg,
          icon: 'none'
        })
      }
    }, session_id)
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that=this;
    wx.showLoading({
      title: '',
    })
    if (app.globalData.auth && app.globalData.auth != '') {
      that.getAuthStep();
    } else {
      app.authCallback = auth => {
        that.getAuthStep();
      }
    }
    //that.getAuthStep();
  },
})