page{background: #f4f4f4}
.b_main{width: 716rpx;background: #fff;padding-left: 34rpx;}
.b_content{width: 716rpx;background: #fff;margin-top: 30rpx;padding-left: 34rpx;}
.b_input{width: 686rpx;height:87rpx;border-bottom: 1rpx solid #e5e5e5;display: flex;justify-content: space-between;align-items: center;padding-right: 30rpx;}
.b_input_02{width: 686rpx;height:87rpx;display: flex;justify-content: space-between;align-items: center;padding-right: 30rpx;}
.b_input_avatar{width: 686rpx;height:200rpx;border-bottom: 1rpx solid #e5e5e5;display: flex;justify-content: space-between;align-items: center;padding-right: 30rpx;}
.b_input_right{display: flex;align-items: center}
.b_input_title_01{font-size: 30rpx;color: #000}
.b_input_title_02{font-size: 24rpx;color: #888888}
.b_input_icon{width: 16rpx;height: 25rpx;margin-left: 30rpx;}
.b_input_right_avatar{width: 120rpx;height: 120rpx;border-radius: 50%;margin-right: 35rpx;overflow: hidden;}
.b_input_right_avatar image{width: 120rpx;height: 120rpx;}
input[id="b_input_up"]{color: #888888;font-size: 24rpx;text-align: right;}
.b_input_up{color: #888888;font-size: 24rpx;text-align: right;line-height: 87rpx;width: 100%;height:87rpx;}
.btn{width: 690rpx;height: 87rpx;line-height: 87rpx;background:linear-gradient(to right, #fede01 , #fdc100);margin-top: 30rpx;font-size: 30rpx}
picker{width:400rpx;height: 87rpx;}

.avatar_text{color: red;font-size: 24rpx;}
button::after{border: none}