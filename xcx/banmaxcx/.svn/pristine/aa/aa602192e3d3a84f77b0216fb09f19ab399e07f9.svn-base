// pages/yzm/yzm.js
var app = getApp();
var bm = require('../../utils/common.js')
Page({

  /**
   * 页面的初始数据
   */
  data: {
    lxtel:null,
    Length: 6,        //输入框个数  
    isFocus: true,    //聚焦  
    Value: "",        //输入的内容  
    ispassword: false, //是否密文显示 true为密文， false为明文。  
    second:60,
    second_text:'s后重新发送',
    again:'',
    //姓名
    name:null,
    //银行卡号
    account:null,
    //身份证号
    id_card:null,
    //发送验证码场景值1为注册register，2为绑卡bindcode
    type:null
  },
  Focus(e) {
    var that = this;
    console.log(e.detail.value);
    var inputValue = e.detail.value;
    that.setData({
      Value: inputValue,
    })
  },
  Tap() {
    var that = this;
    that.setData({
      isFocus: true,
    })
  },
  formSubmit(e) {
    var type=this.data.type
    var role = app.globalData.role
    if(type == 2){
      //验证码
      var vcode = e.detail.value.password
      //姓名
      var name = this.data.name
      //银行卡号
      var account = this.data.account
      //身份证号
      var id_card = this.data.id_card
      if (vcode.length == 0){
        wx.showToast({
          title: '请输入验证码',
          icon:'none'
        })
        return false;
      }
      if(role == 1){
        bm.requsetData('/w/finance/add_card', 'post', { vcode: vcode, name: name, account: account, id_card: id_card }, function (data) {
          if (data.data.errcode == 0) {
            wx.showToast({
              title: data.data.errmsg,
              icon: 'none',
              success: function () {
                setTimeout(function () {
                  wx.redirectTo({
                    url: '/pages/worker/mycentre',
                  })
                }, 2000)
              }
            })

          } else {
            wx.showToast({
              title: data.data.errmsg,
              icon: 'none'
            })
          }
        })
      }
      if(role == 2){
        bm.requsetData('/b/finance/add_card', 'post', { vcode: vcode, name: name, account: account, id_card: id_card }, function (data) {
          if (data.data.errcode == 0){
            wx.showToast({
              title: data.data.errmsg,
              icon:'none',
              success:function(){
                setTimeout(function(){
                  wx.redirectTo({
                    url: '/pages/worker/mycentre',
                  })
                },2000)
                
              }
            })
            
          }else{
            wx.showToast({
              title: data.data.errmsg,
              icon: 'none'
            })
          }
        })
      }
    }
  },  
  //重新发送验证码
  again:function(){
    var that=this
    //手机号
    var lxtel = app.globalData.lxtel
    //姓名
    var name = that.data.name
    //银行卡号
    var account = that.data.account
    //身份证号
    var id_card = that.data.id_card
    //发送验证码场景值1为注册register，2为绑卡bindcode
    var type = that.data.type
    that.setData({
      lxtel: lxtel,
      name: name,
      account: account,
      id_card: id_card,
      type: type,
    })
    if (type == 1) {

    }
    //发送验证码
    if (type == 2) {
      bm.requsetData('/c/login/send_code', 'post', { lxtel: lxtel, scene: 'bindcard' }, function (data) {
        if (data.data.errcode == 0){
          wx.showToast({
            title: data.data.errmsg,
            icon:'none'
          })
        }else{
          wx.showToast({
            title: data.data.errmsg,
            icon: 'none'
          })
        }
      })
    }
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    //手机号
    var lxtel = app.globalData.lxtel
    //姓名
    var name = options.name
    //银行卡号
    var account = options.account
    //身份证号
    var id_card = options.id_card
    //发送验证码场景值1为注册register，2为绑卡bindcode
    var type = options.type
    that.setData({
      lxtel: lxtel,
      name:name,
      account: account,
      id_card: id_card,
      type:type
    })
    if(type == 1){

    }
    //发送验证码
    if(type == 2){
      bm.requsetData('/c/login/send_code', 'post', { lxtel: lxtel, scene:'bindcard' }, function (data) {
        console.log(data)
      })
    }
    var time = this.data.second
    var second_text = this.data.second_text
    var again = this.data.again
    setInterval(function(){
      time-=1;
      if( time > 0){
        that.setData({
          second: time
        })
      }else{
        that.setData({
          second: '',
          second_text:'重新发送',
          again:'again',
        })
      }
      
    },1000)
  }
})