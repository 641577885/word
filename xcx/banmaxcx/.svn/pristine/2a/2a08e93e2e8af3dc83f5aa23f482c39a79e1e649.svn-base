// record/uprecord.js
var bm = require('../utils/common.js')
var app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    hiddenpart:true,
    lists:[],
    page:1,
    limit:10,
    getMoreBool: true,
    ispro:false,
    empty_text_01: '当前列表',
    empty_text_02: '您还未发布.....',
    pages:[]
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    var a = setTimeout(function () {
      that.setData({ ispro: false })//标记在请求中
    }, 200)
    wx.showLoading({ title: '加载中' })
    bm.requsetData('/w/resume/drop_list', 'post', { page: that.data.page,limit:that.data.limit }, function (data) {
      console.log(data)
      if (data.data.errcode != 0) {
        wx.showToast({
          mask: true,
          title: data.data.errmsg,
          icon: 'none',
          duration: 2000
        })
      } else {
        if (data.data.list.length==0&&that.data.page==1){
          wx.showLoading({ title: '加载中',duration:2000 })
          that.setData({
            hiddenpart: !that.data.hiddenpart
            })
          wx.hideLoading()
        }else{
          that.setData({lists:data.data.list})
          that.setData({ pages: data.data.page })
          wx.hideLoading()
        }      
      }
    })
  },
  lower:function(){
     var that=this
     if (!that.data.ispro){
       if(that.data.pages.allpage>that.data.page){
         console.log(1)
         wx.showToast({
           mask: true,
           title: '加载中...',
           icon: 'loading',
           duration: 2000
         })
         that.setData({ ispro: false })//标记在请求中
         that.setData({ page: that.data.page+1 })
         that.setData({limit: 10 * (that.data.page) })
         bm.requsetData('/w/resume/drop_list', 'post', { page: that.data.page, limit: that.data.limit }, function (data) {
           if (data.data.errcode != 0) {
             wx.showToast({
               mask: true,
               title: data.data.errmsg,
               icon: 'none',
               duration: 2000
             })
           }else{
             var newlist=that.data.lists
              for(var i=0;i<data.data.list.length;i++){
                newlist.push(data.data.list[i])
              }
              that.setData({ lists: newlist})
           }
         })
       } else {
         wx.showToast({
           mask: true,
           title: '没有数据了',
           icon: 'none',
           duration: 500
         })
         that.setData({ ispro: false })//标记在请求中
       }
       
     }
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
  
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },
  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})